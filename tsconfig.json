{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",

    "noEmit": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "types": [
      "aws-sdk",
      "react",
      "react-router"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
